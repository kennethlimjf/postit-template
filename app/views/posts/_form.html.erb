<%= render 'shared/form_errors', form_obj: @post %>

<div class="row">
  <div class="span6 well">
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <hr>

      <%= f.submit class: "btn btn-success" %>
    <% end %>
  </div>
</div>