<%= render 'shared/form_errors', form_obj: @post %>

<div class="row">
  <div class="span6 well">
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <br>

      <%= f.label :category_ids, 'Category' %>
      <%= f.select :category_ids, Category.all.map { |c| [ c.name, c.id ] }, {}, { multiple: 'multiple', size: "#{Category.all.size}" } %>

      <br>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <hr>

      <%= f.submit class: "btn btn-success" %>
    <% end %>
  </div>
</div>