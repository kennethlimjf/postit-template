<div class="row">

  <%= render partial: 'votes/vote', locals: { vote_up_path: vote_post_path({ id: post.id, vote: 1 }),
                                              vote_down_path: vote_post_path({ id: post.id, vote: -1 }),
                                              obj: post
                                            } %>

  <div class="span8 well">

    <%= render post.categories %>

    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">Posted by</span>
      <%= display_user(post.creator) %>, 
      <small><%= datetime_formatter(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to "#{post.comments.size} #{"comment".pluralize(post.comments.size)}", post_path(post) %>
      </span>
      <% if logged_in? %>
        <span>
          <%= link_to "(Edit)", edit_post_path(post) %>
        </span>
      <% end %>
    </small>
  </div>
</div>